<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="456.0" prefWidth="836.0" xmlns="http://javafx.com/javafx/19"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.Controller.RegisterController">
    <children>
        <Pane prefHeight="456.0" prefWidth="110.0" style="-fx-background-color: #52438F;" />
        <Label layoutX="133.0" layoutY="31.0" text="Registrieren">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>
        <Separator layoutX="133.0" layoutY="68.0" prefHeight="1.0" prefWidth="520.0" />
        <TextField fx:id="name" layoutX="134.0" layoutY="108.0" promptText="Name"
            style="-fx-background-color: transparent; -fx-border-color: #8000FF; -fx-border-width: 0px 0px 2px 0px;" />
        <TextField fx:id="schule" layoutX="136.0" layoutY="165.0" promptText="Schule"
            style="-fx-background-color: transparent; -fx-border-color: #8000FF; -fx-border-width: 0px 0px 2px 0px;" />
        <TextField fx:id="jahrgang" layoutX="136.0" layoutY="226.0" promptText="Jahrgang"
            style="-fx-background-color: transparent; -fx-border-color: #8000FF; -fx-border-width: 0px 0px 2px 0px;" />
        <TextField fx:id="lehrperson" layoutX="136.0" layoutY="286.0" promptText="Lehrperson"
            style="-fx-background-color: transparent; -fx-border-color: #8000FF; -fx-border-width: 0px 0px 2px 0px;" />
        <TextField fx:id="vorname" layoutX="366.0" layoutY="108.0" promptText="Vorname"
            style="-fx-border-color: #8000FF; -fx-border-width: 0px 0px 2px 0px; -fx-background-color: transparent;" />
        <TextField fx:id="ortDerSchule" layoutX="366.0" layoutY="165.0" promptText="Ort der Schule"
            style="-fx-background-color: transparent; -fx-border-color: #8000FF; -fx-border-width: 0px 0px 2px 0px;" />
        <TextField fx:id="userName" layoutX="366.0" layoutY="231.0" promptText="Benutzername"
            style="-fx-background-color: transparent; -fx-border-color: #8000FF; -fx-border-width: 0px 0px 2px 0px;" />
        <Button fx:id="registerButton" layoutX="636.0" layoutY="211.0" mnemonicParsing="false"
            onAction="#register" prefHeight="25.0" prefWidth="125.0" styleClass="button1"
            stylesheets="@main.css" text="Registrieren" textFill="WHITE" />
        <Button fx:id="deleteButton" layoutX="636.0" layoutY="166.0" mnemonicParsing="false"
            onAction="#clearFields" prefHeight="25.0" prefWidth="125.0"
            style="-fx-background-color: red;" styleClass="button1" stylesheets="@main.css"
            text="Löschen" textFill="WHITE" />
        <Button fx:id="backToLoginButton" layoutX="636.0" layoutY="123.0" mnemonicParsing="false"
            onAction="#switchToLogin" prefHeight="25.0" prefWidth="125.0" styleClass="button2"
            stylesheets="@main.css" text="zurück" textFill="WHITE" />
        <Label fx:id="userNameError" layoutX="366.0" layoutY="257.0" text="Label" textFill="red"
            visible="false" />
        <Label fx:id="jahrgangError" layoutX="136.0" layoutY="257.0" text="Label" textFill="red"
            visible="false" />
        <PasswordField fx:id="password" layoutX="366.0" layoutY="292.0" promptText="Passwort"
            style="-fx-background-color: transparent; -fx-border-color: #8000FF; -fx-border-width: 0px 0px 2px 0px;" />
        <PasswordField fx:id="password2" layoutX="366.0" layoutY="344.0"
            promptText="Passwort wiederhollen"
            style="-fx-background-color: transparent; -fx-border-color: #8000FF; -fx-border-width: 0px 0px 2px 0px;" />
        <Label fx:id="passwordError" layoutX="366.0" layoutY="371.0" text="Label" textFill="red"
            visible="false" />
    </children>
</AnchorPane>